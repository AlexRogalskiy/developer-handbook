kubernetes:
  host: https://kubernetes.default

handbook:
  labels:
    group: com.stakater.platform
    provider: stakater
    version: {{ getenv "VERSION" }}
    expose: 'true'
  deployment:
    replicas: 1
    podLabels:      
      app: developer-handbook
    containerName: handbook
    imagePullSecrets: docker-registry-secret 
    image:
      name: {{ getenv "DOCKER_IMAGE" }}
      tag: "{{ getenv "VERSION" }}"


